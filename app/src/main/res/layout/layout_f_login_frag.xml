<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Login_frag">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:background="@drawable/deliver_signup_img">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:src="@drawable/logo_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/compare_tv"
            />
        <TextView
            android:id="@+id/compare_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:layout_gravity="center"
            android:text="سجل ك مندوب"
            android:textColor="@color/half_light_gray_opacity_100"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="البريد الإلكتروني"
                android:textSize="16sp"
                android:textColor="@color/et_hint"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/et_line"
                android:layout_marginEnd="37dp"
                android:layout_marginStart="37dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="كلمة المرور"
                android:textSize="16sp"
                android:textColor="@color/et_hint"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/et_line"
                android:layout_marginEnd="37dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="23dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="25dp">
                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="تسجيل دخول"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_green"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نسيت كلمة المرور؟"
                android:textColor="@color/greyish_brown1"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                >
                <TextView
                    android:id="@+id/sign_up_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إنشاء حساب جديد"
                    android:textSize="13sp"
                    android:textColor="@color/link_blue"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تريد الإنضمام إلينا كـ مندوب؟ "
                    android:textSize="13sp"
                    android:textColor="@color/greyish_brown1"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>