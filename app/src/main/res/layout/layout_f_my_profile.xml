<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@color/white_layout"
    tools:context=".Fragments.MyProfile">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:background="@color/brownish_grey"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ملفي الشخصي"
            android:fontFamily="@font/questv1_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/white_circle_green"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_right_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="37dp"
            android:paddingStart="37dp"
            android:gravity="right">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userImg"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/ic_user_img_gray"
                android:layout_gravity="center_horizontal"
                app:civ_border_width="1dp"
                android:layout_marginTop="22dp"
                app:civ_border_color="@color/dark_mint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البيانات الشخصية"
                android:textSize="16sp"
                android:fontFamily="@font/questv1_bold"
                android:textColor="@color/dark_mint"
                android:layout_marginTop="32dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الإسم"
                android:textSize="14sp"
                android:textColor="#aeaeae"
                android:fontFamily="@font/tajawal_medium"
                android:layout_marginTop="18dp"
                />
            <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#7b7b7b"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:maxLength="50"
                android:textColor="#7b7b7b"
                android:fontFamily="@font/tajawal_medium"
                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الجوال"
                android:textSize="14sp"
                android:textColor="#aeaeae"
                android:fontFamily="@font/tajawal_medium"
                android:layout_marginTop="13dp"
                />
            <EditText
                android:id="@+id/phoneNo_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#7b7b7b"
                android:textAlignment="textEnd"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="13"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="#7b7b7b"

                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البريد الإلكتروني"
                android:textSize="14sp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="#aeaeae"
                android:layout_marginTop="13dp"
                />
            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#7b7b7b"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="#7b7b7b"
                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
