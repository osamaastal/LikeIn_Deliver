            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الجنسية"
                android:textSize="14sp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/text_gray"
                android:layout_marginTop="26dp"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:entries="@array/country_arrays"
                    android:fontFamily="@font/tajawal_medium"
                    android:background="@drawable/spinner_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_arrow_down"
                    app:layout_constraintTop_toTopOf="@+id/spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@+id/spinner"
                    />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الرجاء رفع الصور التالية"
                android:textSize="16sp"
                android:fontFamily="@font/questv1_bold"
                android:textColor="@color/dark_mint"
                android:layout_marginTop="47dp"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/upload1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_upload_images_bg"
                    android:fontFamily="@font/tajawal_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="رفع الصورة"
                    android:textColor="#636363"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة للهوية"
                    android:textSize="14sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload1_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <Button
                    android:id="@+id/upload2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="رفع الصورة"
                    android:textSize="11sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="#636363"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/btn_upload_images_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة رخصة السيارة"
                    android:textSize="14sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload2_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <Button
                    android:id="@+id/upload3_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="رفع الصورة"
                    android:textSize="11sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="#636363"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/btn_upload_images_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة السيارة"
                    android:textSize="14sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload3_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="42dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/Logout_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="تسجيل الخروج "
                    android:textSize="15sp"
                    android:textColor="#fd6c52"
                    android:fontFamily="@font/tajawal_medium"
                    android:layout_marginEnd="9dp"
                    android:background="@drawable/btn_red_strock_bg"
                    />
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="حفظ التعديلات"
                    android:textSize="15sp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/white"
                    android:layout_marginStart="9dp"
                    android:background="@drawable/btn_green_no_redius"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


