<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@color/white_layout"
    tools:context=".Fragments.MyProfile">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:background="@color/brownish_grey"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="ملفي الشخصي"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/cancel_ban"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/white_circle_green"
            android:padding="10dp"
            android:src="@drawable/icon_arrow_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="37dp"
            android:paddingStart="37dp"
            android:gravity="right">
            <ImageView
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user_500x500_gray"
                android:layout_marginTop="22dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البيانات الشخصية"
                android:textSize="16sp"
                android:textColor="@color/dark_mint"
                android:layout_marginTop="32dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الإسم"
                android:textSize="14sp"
                android:textColor="#aeaeae"
                android:layout_marginTop="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="محمد خالد"
                android:textColorHint="#7b7b7b"
                android:textSize="16sp"
                android:textColor="#7b7b7b"
                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الجوال"
                android:textSize="14sp"
                android:textColor="#aeaeae"
                android:layout_marginTop="13dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0554740678"
                android:textColorHint="#7b7b7b"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textColor="#7b7b7b"
                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البريد الإلكتروني"
                android:textSize="14sp"
                android:textColor="#aeaeae"
                android:layout_marginTop="13dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email@example.com"
                android:textColorHint="#7b7b7b"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textColor="#7b7b7b"
                android:paddingBottom="18dp"
                android:backgroundTint="#cfcfcf"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أنثى"
                    android:textSize="14sp"
                    android:textColor="#7b7b7b"
                    />
                <RadioButton
                    android:id="@+id/first_RB"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:button="@null"
                    android:drawablePadding="6dp"
                    android:drawableEnd="@drawable/radio_btn_selector"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="30dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ذكر"
                    android:textSize="14sp"
                    android:textColor="#7b7b7b"
                    />
                <RadioButton
                    android:id="@+id/second_RB"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:button="@null"
                    android:drawablePadding="6dp"
                    android:drawableEnd="@drawable/radio_btn_selector"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="17dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="الجنس : "
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الجنسية"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="26dp"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:entries="@array/country_arrays"
                    android:prompt="@string/country_prompt"
                    android:background="@drawable/spinner_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow_down"
                    app:layout_constraintTop_toTopOf="@+id/spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner"
                    app:layout_constraintLeft_toLeftOf="@+id/spinner"
                    />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الرجاء رفع الصور التالية"
                android:textSize="16sp"
                android:textColor="@color/dark_mint"
                android:layout_marginTop="47dp"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/upload1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="رفع الصورة"
                    android:textSize="11sp"
                    android:textColor="#636363"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/btn_upload_images_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة للهوية"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload1_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <Button
                    android:id="@+id/upload2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="رفع الصورة"
                    android:textSize="11sp"
                    android:textColor="#636363"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/btn_upload_images_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة للهوية"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload2_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <Button
                    android:id="@+id/upload3_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="رفع الصورة"
                    android:textSize="11sp"
                    android:textColor="#636363"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/btn_upload_images_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صورة للهوية"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg1"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload3_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="42dp"
                android:weightSum="2">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="تسجيل الخروج "
                    android:textSize="15sp"
                    android:textColor="#fd6c52"
                    android:layout_marginEnd="9dp"
                    android:background="@drawable/btn_red_strock_bg"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="حفظ التعديلات"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="9dp"
                    android:background="@drawable/btn_green_no_redius"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>